#:import switchButton switchButton
#:set row_height dp(40)
#:set spacing_padding dp(10)

<ComponentChoseCalculations>:
    row_default_height: row_height
    padding: [spacing_padding, spacing_padding, spacing_padding, spacing_padding]
    spacing: spacing_padding
    cols: 3
    rows: 4
    height: 4 * row_height  + 6 * spacing_padding

    MDLabel: 
        size_hint_x: 1.5
        valign: 'middle'
        text: "Q^i units calculations: "
        theme_text_color: "Custom"
        text_color: app.theme_cls.text_color

    SwithButtonWidget:

    MDRelativeLayout:
        width: row_height
        MDTextField:
            helper_text: "ID eg. '=', 'my bond' ...."
            hint_text: "ID of bond: "
            helper_text_mode: "persistent"
            height: '30dp'
            pos_hint: {"center_x": 0.5, "center_y": 0.66}
            text_color_normal: app.theme_cls.text_color
            helper_text_color_normal: app.theme_cls.text_color
            hint_text_color_normal: app.theme_cls.text_color
            helper_text_color_focus: "red"
            line_color_normal: app.theme_cls.text_color
            on_focus: app.change_state(self)

    MDLabel: 
        size_hint_x: 1.5
        valign: 'middle'
        text: "cordination numbers: "
        height: row_height
        theme_text_color: "Custom"
        text_color: app.theme_cls.text_color

    SwithButtonWidget:

    MDLabel: 
        valign: 'middle'
        text: " "
        height: row_height
        theme_text_color: "Custom"
        text_color: app.theme_cls.text_color

    MDLabel: 
        size_hint_x: 1.5
        valign: 'middle'
        text: "conections betwen atoms: "
        height: row_height
        theme_text_color: "Custom"
        text_color: app.theme_cls.text_color
    
    SwithButtonWidget:

    MDLabel: 
        valign: 'middle'
        text: " "
        height: row_height
        theme_text_color: "Custom"
        text_color: app.theme_cls.text_color

    MDLabel: 
        size_hint_x: 1.5
        valign: 'middle'
        text: "Relation between bond order and bond lenght: "
        height: row_height
        theme_text_color: "Custom"
        text_color: app.theme_cls.text_color

    SwithButtonWidget:

    MDLabel: 
        valign: 'middle'
        text: " "
        height: row_height


