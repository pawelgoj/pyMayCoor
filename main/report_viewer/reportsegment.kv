<ReportSegment>:
    readonly: True
    allow_copy: True
    foreground_color: app.theme_cls.text_color
    background_color: app.theme_cls.bg_normal
    background_normal: 'white.png'
    # background_active: 'white.png'
    halign: 'left'
    valign: 'top'
    text: ''
    selection_color: 
        (app.theme_cls.primary_color[0],
        app.theme_cls.primary_color[1],
        app.theme_cls.primary_color[2],
        0.25)

    cursor_color: app.theme_cls.primary_color
    size_hint: None, None
    font_name: "../fonts/Roboto-Bold.ttf"
    font_size: 14
    scroll_from_swipe: False


